{
	"configurations": {
		"run": {
			"adapter": "vscode-cpptools",
			"configuration": {
				"request": "launch",
				"preLaunchTask": "compile calc",
				"cwd": "${workspaceRoot}",
				"program": "${workspaceRoot}/calc",
				"MIMode": "gdb",
				"stopOnEntry": true
			}
		}
	},
	"tasks": [
		{
			"label": "compile calc",
			"type": "shell",
			"command": "make -C ${workspaceRoot}"
		}
	]
}
