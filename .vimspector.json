{
  "configurations": {
    "Launch": {
      "adapter": "vscode-cpptools",
      "filetypes": [ "cpp", "c", "objc", "rust" ], // optional
      "stopOnEntry": true,
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/calc",
        "cwd": "${workspaceRoot}",
        "externalConsole": true,
        "MIMode": "gdb"
      }
    },
    "Attach": {
      "adapter": "vscode-cpptools",
      "filetypes": [ "cpp", "c", "objc", "rust" ], // optional
      "stopOnEntry": true,
      "configuration": {
        "request": "attach",
        "program": "/usr/bin/gdb",
        "MIMode": "gdb"
      }
    }
  }
}
